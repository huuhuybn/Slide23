<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:background="@drawable/bubblee"
        style="@style/MyManlyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAAAAAAAAAAAAAAeeedeeesssssssssssssssssssssssA \nAAAAAAAAAAAAAAAA "
        />

    <ImageView
        android:visibility="gone"
        android:background="@color/black"
        android:src="@mipmap/ic_launcher"
        android:adjustViewBounds="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />



    <Button
        android:visibility="gone"
        android:background="@drawable/btn_selector"
        style="@style/MyManlyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:visibility="gone"
        android:background="@color/blue"
        android:src="@drawable/btn_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <CheckBox
        android:id="@+id/cbCheckBox"
        style="@style/MyManlyTextView"
        android:text="Remember password ???"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/rgRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:text="Phuong An A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="Phuong An B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="Phuong An C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="Phuong An D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>


</LinearLayout>